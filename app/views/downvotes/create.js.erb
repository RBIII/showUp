var id = <%= @show.id %>;
var vote_value = parseInt($('.' + id + '-sum').first().text());
var difference = <%= @vote.value - @last_value %>;

if(difference === -2){
  $('.' + id + '-up').removeClass('upvote').removeClass(id + '-up').addClass('novote-up').addClass(id + '-noup');
  $('.' + id + '-nodown').removeClass('novote-down').removeClass(id + '-nodown').addClass('downvote').addClass(id + '-down');
  vote_value += difference;
  $('.' + id + '-sum').html(String(vote_value));
}
else if(difference === -1){
  $('.' + id + '-nodown').removeClass('novote-down').removeClass(id + '-nodown').addClass('downvote').addClass(id + '-down');
  vote_value += difference;
  $('.' + id + '-sum').html(String(vote_value));
}
else{
  $('.' + id + '-down').removeClass('downvote').removeClass(id + '-down').addClass('novote-down').addClass(id + '-nodown');
  vote_value += difference;
  $('.' + id + '-sum').html(String(vote_value));
}
