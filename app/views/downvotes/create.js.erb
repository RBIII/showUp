var id = <%= @show.id %>;
var page_votes = parseInt($('.' + id + '-sum').first().text());
var difference = <%= @vote.value - @last_value %>;

if(difference === -2){
  $('.' + id + '-up').css({'color': '#008CBA'}).removeClass(id + '-up').addClass(id + '-noup');
  $('.' + id + '-nodown').css({'color': '#FF8533'}).removeClass(id + '-nodown').addClass(id + '-down');
  page_votes += difference;
  $('.' + id + '-sum').html(String(page_votes));
}
else if(difference === -1){
  $('.' + id + '-nodown').css({'color': '#FF8533'}).removeClass(id + '-nodown').addClass(id + '-down');
  page_votes += difference;
  $('.' + id + '-sum').html(String(page_votes));
}
else{
  $('.' + id + '-down').css({'color': '#008CBA'}).removeClass(id + '-down').addClass(id + '-nodown');
  page_votes += difference;
  $('.' + id + '-sum').html(String(page_votes));
}
